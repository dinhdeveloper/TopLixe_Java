<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:id="@+id/layoutClick"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageSong"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_margin="5dp"
            android:layout_alignRight="@+id/imageSong"
            android:layout_alignBottom="@+id/imageSong"
            android:src="@drawable/ic_multimedia"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nameSong"
            android:layout_marginVertical="5dp"
            android:textColor="@color/whileColor"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/roboto_light"
            android:textSize="15dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/singerName"
            android:maxLines="1"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/blackfive"
            android:textSize="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_more_horiz_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>