<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerInside"
            android:background="@drawable/custom_background_item_film_more"
            android:id="@+id/imageFilm"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_margin="10dp"
            android:textColor="@color/whileColor"
            android:layout_alignBottom="@+id/imageFilm"
            android:layout_alignRight="@+id/imageFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/filmNames"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="14dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/whileColor"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/ic_more_vert_24"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/country"
            android:textSize="12dp"
            android:layout_weight="1"
            android:textColor="@color/colorTextThr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>